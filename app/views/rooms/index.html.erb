<p id="notice"><%= notice %></p>
<div class="p-3 mb-2 bg-primary text-white bg-opacity-75">
<h1>Rooms</h1>

<table class="table">
  <thead>
    <tr>
      <th style="font-size: 27px;">Meeting host name</th>
      <th style="font-size: 27px;">Last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td style="font-size: 25px;"><%= room.name %></td>
        <td style="font-size: 25px;"><%= room.last_name %></td>
        <td><%= link_to 'video call meeting', room, class: 'btn btn-success', style:'color:#FFFFFF' %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' },  class: "btn btn-danger", style:'color:#FFFFFF'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_room_path, class: "btn btn-info"%>
</div>

